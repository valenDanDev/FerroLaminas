@page "/cotizaciones"

<h3 class="cotizacion-title">Cotizaciones</h3>

<form class="cotizacion-form">
    <div>
        <label for="cliente">Cliente:</label>
        <input type="text" id="cliente" name="cliente" />
    </div>
    <div>
        <label for="proyecto">Proyecto:</label>
        <input type="text" id="proyecto" name="proyecto" />
    </div>
    <div>
        <label for="material">Material:</label>
        <select id="material" name="material">
            <option value="acero">Acero</option>
            <option value="aluminio">Aluminio</option>
            <option value="madera">Madera</option>
        </select>
    </div>
    <div>
        <label for="calibre">Calibre:</label>
        <input type="number" id="calibre" name="calibre" />
    </div>
    <button type="submit">Calcular precio</button>
</form>

<p class="cotizacion-total">Precio total: $...</p>

<button class="cotizacion-submit" type="button">Enviar cotización</button>
